{
	"trailingComma": "all",
	"tabWidth": 2,
	"semi": true,
	"singleQuote": true,
	"printWidth": 100,
	"useTabs": false,
	"bracketSpacing": true,
	"arrowParens": "always",
	"endOfLine": "lf",
	"overrides": [
		{
			"files": ["*.yml", "*.yaml", "*.json"],
			"options": {
				"tabWidth": 2,
				"singleQuote": false
			}
		}
	]
}
